{
  "compilerOptions": {
    "module": "commonjs",
    "lib": ["esnext", "dom"],
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "allowJs": true,
    "moduleResolution": "node",
    "rootDir": "src",
    "outDir": "dist",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true
  }
}
